# OpenAI (ChatGPT) API（必須）
OPENAI_API_KEY=your_api_key_here

# オプション: サーバー設定
FLASK_ENV=development
FLASK_PORT=5001

# SMTP（メール送信に必須）
# 最低限: SMTP_USER / SMTP_PASSWORD
# Gmail / Outlook / iCloud / Yahoo.co.jp は SMTP_HOST 未指定でも自動補完
SMTP_USER=
SMTP_PASSWORD=
# 必要に応じて手動指定
SMTP_HOST=
SMTP_PORT=587
SMTP_FROM=
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# 管理画面（アンバサダー一覧・累計紹介数・累計売上）。?key= でアクセス
ADMIN_SECRET=your_admin_secret_here
